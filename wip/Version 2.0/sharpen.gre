<ShaderEffect name="Sharpen" menuPath="Enhance">
    <Properties>
     <Property name="sharpness" nameUI="Amount" type="float" min="0.0" max="20.0" ini="1.0" step ="0.1" glValue="true"/>
    </Properties>
     <glValues>
        <glValue name="resolution"  type="vec2" value="[_eRect[2], _eRect[3]]"/>
    </glValues>
</ShaderEffect>
